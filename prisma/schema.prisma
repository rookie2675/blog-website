generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Article {
    id       Int    @id @default(autoincrement())
    title    String
    summary  String
    body     String
    authorId Int
    author   Author @relation(fields: [authorId], references: [id])
}

model Author {
    id       Int       @id @default(autoincrement())
    name     String
    articles Article[]
}
